@model IEnumerable<ProductAdminPanelViewModel>

<table>
    @*Table headers*@
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Category
        </th>
        <th>
            @*Edit*@
        </th>
        <th>
            @*Delete*@
        </th>
    </tr>

    @*Category Name, IsOfficial toggle and options to Edit or Delete*@
    @foreach (var product in Model)
    {
        <tr>
            <td>
                @product.Name
            </td>
            <td>
                @product.Category
            </td>
            <td>
                <a asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@product.Id">
                    <img class="grow" src="~/images/menus/edit.svg" style="width: 25px">
                </a>
            </td>
            <td>

                <a asp-controller="AdminProduct" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete @product.Name?')">
                    <img class="grow" src="~/images/menus/delete.svg" style="width: 25px">
                </a>
            </td>
        </tr>
    }

    @*Add to category list button*@
    <tr>
        <td class="add-btn" colspan="4">
            <a asp-controller="AdminProduct" asp-action="Add">
                <img class="grow" src="~/images/menus/add.svg" style="width: 25px" />
            </a>
        </td>
    </tr>
</table>

<style>
    td {
        padding-bottom: 1rem;
    }
</style>