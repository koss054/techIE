@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-first">

    <img class="hero-img" src="~/images/index-page/hero-image-large-desktop.jpg" />

    <div class="hero-content">
        <div class="t-container">
            <h1>tech<span class="logo-i">I</span><span class="logo-e">E</span></h1>
            <span class="hero-paragraph">
                A secure tech shop. Choose from our products or use our user marketplace page to trade with others.
            </span>
            <img class="right-arrow" src="~/images/menus/right-arrow.svg" />
        </div>
    </div>

</section>

<section class="hero-second">
    <img class="hero-img" src="~/images/index-page/hero-image-large-desktop-2.jpg" />

    <div class="hero-content-second">
        <div class="t-container">
            <h1>Leave the shipping to us</h1>
            <img class="left-arrow" src="~/images/menus/left-arrow.svg" />
            <span class="hero-paragraph">
                Worried you won't be paid after a user orders your product? Use our user marketplace and we'll handle the shipping and necessary payment!
            </span>
        </div>
    </div>

</section>

<script src="~/js/home-index/index-script.js"></script>

